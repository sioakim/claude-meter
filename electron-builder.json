{
  "appId": "com.claudemeter.app",
  "productName": "Claude Meter",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "assets/icon.icns",
    "notarize": true,
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "extendInfo": {
      "LSUIElement": true,
      "CFBundleDisplayName": "Claude Meter",
      "CFBundleName": "Claude Meter",
      "CFBundleExecutable": "Claude Meter",
      "NSHumanReadableCopyright": "Copyright Â© 2024 Claude Meter. Based on CCSeva.",
      "CFBundleDocumentTypes": [],
      "LSMinimumSystemVersion": "10.15.0"
    }
  },
  "dmg": {
    "title": "Claude Meter",
    "icon": "assets/icon.icns"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  }
}